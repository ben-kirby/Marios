            <p class="card-text">Likely from prison labor :(</p>
          </div>
        </div>
      </div>
    </div>

    <div class="">

    </div>
  </div>
  <div id="search" class="row">
    <div class="col-9">

    <%= form_tag("/search", method: "get") do %>
      <div class="input-group mb-3">
        <input placeholder="Search Title" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        <div class="input-group-append">
          <button type="submit" class="btn btn-outline-danger" name="button">Search</button>
        </div>
      </div>
    <% end %>
    </div>
  </div>

